{
  "Resources": {
    "willpatch": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "RequiresCompatibilities": [
          "FARGATE"
        ],
        "Tags": [
          {
            "Key": "kilt-include-containers",
            "Value": "app"
          },
          {
            "Key": "sometag",
            "Value": "antani"
          }
        ],
        "ContainerDefinitions": [
          {
            "Name": "app",
            "Image": "busybox",
            "EntryPoint": ["/bin/sh"]
          },
          {
            "Name": "something-else",
            "Image": "busybox",
            "EntryPoint": ["/bin/sh"]
          }
        ]
      }
    }
  }
}