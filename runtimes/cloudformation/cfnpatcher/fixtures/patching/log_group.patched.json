{
  "Resources": {
    "taskdef": {
      "Properties": {
        "ContainerDefinitions": [
          {
            "Command": [
              "/bin/sh"
            ],
            "EntryPoint": [
              "/kilt/run",
              "--",
              ""
            ],
            "Image": {
              "Ref": "Parameter"
            },
            "Name": "app",
            "LinuxParameters": {
              "Capabilities": {
                "Add": [
                  "SYS_PTRACE"
                ]
              }
            },
            "VolumesFrom": [
              {
                "ReadOnly": true,
                "SourceContainer": "KiltImage"
              }
            ]
          },
          {
            "EntryPoint": [
              "/kilt/wait"
            ],
            "Image": "KILT:latest",
            "Name": "KiltImage",
            "LogConfiguration": {
              "LogDriver": "awslogs",
              "Options": {
                "awslogs-group": "test_logs",
                "awslogs-region": {
                  "Ref": "AWS::Region"
                },
                "awslogs-stream-prefix": "taskdef"
              }
            }
          }
        ],
        "RequiresCompatibilities": [
          "FARGATE"
        ],
        "Tags": [
          {
            "Key": "antani",
            "Value": "sbiribuda"
          },
          {
            "Key": "kiltinclude",
            "Value": "itisignored"
          }
        ]
      },
      "Type": "AWS::ECS::TaskDefinition"
    }
  }
}